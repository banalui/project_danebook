<main class="container">
	<%= render "cover" %>
	<section class="row profile-container">
		<div class="col-md-12">
			<div class="row about-line">
				<div class="col-md-4 col-md-offset-4 about-label">
					<label>Edit Profile</label>
				</div>
				<div class="col-md-4 edit-button">
					<%= link_to "Edit your Profile", edit_user_path(@user), class: "btn btn-primary btn-edit btn-lg" %>
				</div>
			</div>
			<%= form_for @user do |user_fields| %>
				<div class="row info-line" id="info-line-edit">
					<div class="col-md-5 info-wrapper">
						<h2>Basic Information</h2>
						<div class="row basic-info-line">
							<div class="col-md-6 info-label"><b>Birthday:</b></div>
							<div class="col-md-6 info-info"><%= @user.birthday.strftime('%b %d, %Y') %></div>
						</div>
						<div class="row basic-info-line">
							<div class="col-md-6 info-label"><b>College:</b></div>
							<div class="col-md-6 info-info">
								<%= user_fields.text_field :college, class: "form-control", id: "college" %><%= form_field_error_messages(@user, :college) %>
							</div>
						</div>
						<div class="row basic-info-line">
							<div class="col-md-6 info-label"><b>Hometown:</b></div>
							<div class="col-md-6 info-info">
								<%= user_fields.text_field :hometown, class: "form-control", id: "hometown" %><%= form_field_error_messages(@user, :hometown) %>
							</div>
						</div>
						<div class="row basic-info-line">
							<div class="col-md-6 info-label"><b>Currently Lives:</b></div>
							<div class="col-md-6 info-info">
								<%= user_fields.text_field :currently_lives, class: "form-control", id: "currently_lives" %><%= form_field_error_messages(@user, :currently_lives) %>
							</div>
						</div>
						<h2>Contact Information</h2>
						<div class="row basic-info-line">
							<div class="col-md-6 info-label"><b>Email:</b></div>
							<div class="col-md-6 info-info"><%= @user.email %></div>
						</div>
						<div class="row basic-info-line">
							<div class="col-md-6 info-label"><b>Telephone:</b></div>
							<div class="col-md-6 info-info">
								<%= user_fields.text_field :telephone, class: "form-control", id: "telephone" %><%= form_field_error_messages(@user, :telephone) %>
							</div>
						</div>
					</div>
					<div class="col-md-7 aboutme-wrapper">
						<h2>Words to Live By</h2>
						<%= user_fields.text_area :words_to_live_by, class: "form-control tallform", id: "words_to_live_by", :rows => 3 %><%= form_field_error_messages(@user, :words_to_live_by) %>
						<h2>About Me</h2>
						<%= user_fields.text_area :about_me, class: "form-control tallform", id: "aboutme", :rows => 9 %><%= form_field_error_messages(@user, :about_me) %>
					</div>
				</div>
				<div class="row save-line">
					<div class="col-md-6 col-md-offset-3 save-button">
						<%= user_fields.submit "Save Changes", class: "btn btn-primary btn-save btn-lg" %>
					</div>
				</div>
			<% end %>
		</div>
	</section>
</main>